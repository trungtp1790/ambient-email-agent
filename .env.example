# Ambient Email Agent Configuration  
  
# Required: Gemini API Key (get from https://makersuite.google.com/app/apikey)  
GOOGLE_GENERATIVE_AI_API_KEY=your_gemini_api_key_here  
  
# Required: HITL Secret for approving actions (change this to something secure)  
HITL_SECRET=your_secure_hitl_secret_here  
  
# Optional: Gmail labels to monitor (comma-separated)  
LABELS_TO_WATCH=INBOX,IMPORTANT  
  
# Optional: Polling interval in seconds (default: 45)  
POLL_INTERVAL_SECONDS=45  
  
# Optional: Database path (default: ./data/memory.sqlite)  
DB_PATH=./data/memory.sqlite  
  
# Optional: Log level (DEBUG, INFO, WARNING, ERROR)  
LOG_LEVEL=INFO  
  
# Optional: API host and port  
API_HOST=0.0.0.0  
API_PORT=8000  
  
# Optional: Enable debug mode  
DEBUG=false 
